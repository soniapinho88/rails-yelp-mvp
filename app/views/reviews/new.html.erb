<div class="container">
  <div class="card">
    <div class="card-header">
      <h2>Add a Review</h2>
    </div>
    <div class="card-body">
      <%= simple_form_for [ @restaurant, @review ], html: { class: "form-horizontal" } do |f| %>
        <div class="col-sm-10">
          <%= f.input :rating, collection: 0..5, class: "form-control" %>
        </div>

        <div class="col-sm-10">
          <%= f.input :content, class: "form-control" %>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Submit review", class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
