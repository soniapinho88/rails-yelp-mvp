<h1 class="display-4">Restaurants</h1>
<br>
<div id="restaurants" class="row row-cols-1 row-cols-md-3 g-4">
  <% @restaurants.each do |restaurant| %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><strong>Address:</strong> <%= restaurant.address %></p>
          <p class="card-text"><strong>Phone number:</strong> <%= restaurant.phone_number %></p>
          <p class="card-text"><strong>Category:</strong> <%= restaurant.category %></p>
          <%= link_to "Show", restaurant, class: "btn btn-dark" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="col">
    <div class="card h-100">
      <div class="card-body d-flex justify-content-center align-items-center">
        <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
